{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "baseUrl": "./src",
    "noEmit": true,
    "strict": true,
    "paths": {
      "@application/*": [
        "application/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@infrastructure/*": [
        "infrastructure/*"
      ]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/node_modules/**"]
}
